<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="exchange" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>jdbc/uvms_exchange</jta-data-source>
        <class>eu.europa.ec.fisheries.uvms.config.service.entity.Parameter</class>
        <class>eu.europa.ec.fisheries.uvms.exchange.service.entity.serviceregistry.ServiceSetting</class>
        <class>eu.europa.ec.fisheries.uvms.exchange.service.entity.serviceregistry.ServiceCapability</class>
        <class>eu.europa.ec.fisheries.uvms.exchange.service.entity.serviceregistry.Service</class>
        <class>eu.europa.ec.fisheries.uvms.exchange.service.entity.exchangelog.ExchangeLog</class>
        <class>eu.europa.ec.fisheries.uvms.exchange.service.entity.exchangelog.ExchangeLogStatus</class>
        <class>eu.europa.ec.fisheries.uvms.exchange.service.entity.unsent.UnsentMessage</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <shared-cache-mode>ALL</shared-cache-mode>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.generate_statistics" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
