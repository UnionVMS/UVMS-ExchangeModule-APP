<configuration debug="false" scan="false" scanPeriod="60 seconds">
    
    <property resource="logback.properties" />
    
    <contextName>${application.name}</contextName>
    
    <jmxConfigurator />

    <variable name="LOG_FILE_BASE_PATH" value="${application.logfile.base.path:-/app/logs}" />

    <!-- FILE LOGGER -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <file>${LOG_FILE_BASE_PATH}/${application.logfile}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE_BASE_PATH}/${application.logfile}.%d{yyyy-MM-dd}.%i.log.gz
            </fileNamePattern>
            <maxHistory>10</maxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <MaxFileSize>100MB</MaxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %X{mdcvars:--} %-5level %logger{35} - %msg ${application.logfile.message.pattern}</pattern>
        </encoder>
    </appender>
    <logger name="eu.europa.ec.fisheries.uvms" level="INFO" additivity="false">
        <appender-ref ref="FILE" />
    </logger>
    <root level="ERROR">
        <appender-ref ref="FILE" />
    </root>

</configuration>